<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-110dp"
        android:src="@drawable/img_header01"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-100dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:drawableTop="@drawable/icon_mainservice01"
            android:text="ห้องซ้อมเต้น"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:id="@+id/bt_service1"
            android:padding="15dp"
            android:background="@drawable/rounded_corners"
            android:shadowColor="@color/purple"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:drawableTop="@drawable/icon_mainservice02"
            android:text="เรียนเต้น"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:id="@+id/bt_service2"
            android:padding="15dp"
            android:background="@drawable/rounded_corners"
            android:shadowColor="@color/purple"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:drawableTop="@drawable/icon_mainservice03"
            android:text="การแข่งขัน"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:id="@+id/bt_service4"
            android:padding="15dp"
            android:background="@drawable/rounded_corners"
            android:shadowColor="@color/purple"
            />

    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ImageView>

    </LinearLayout>


</LinearLayout>